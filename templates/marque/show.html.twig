{% extends 'base.html.twig' %}

{% block title %}Marque{% endblock %}

{% block stylesheets %}
<style>
    .container {
        margin-top: 20px;
    }

    h1 {
        color: #ffffff;
        text-shadow: 2px 2px 4px #000000;
        text-align: center;
        margin-bottom: 20px;
        font-size: 2.5em;
        animation: fadeIn 2s;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-warning:hover {
        background-color: #e0a800;
        border-color: #d39e00;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .btn-container {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }

    .table-container {
        background-color: #000000;
        color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .table th,
    .table td {
        border: 1px solid #ffa500;
    }

    .table thead th {
        background-color: #343a40;
        color: #ffffff;
        font-weight: bold;
    }

    .table tbody tr {
        background-color: #000000;
        color: #ffffff;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Marque</h1>

    <div class="table-container">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ marque.id }}</td>
                </tr>
                <tr>
                    <th>Pays</th>
                    <td>{{ marque.pays.nomPays }}</td>
                </tr>
                <tr>
                    <th>Fabricant</th>
                    <td>{{ marque.fabricant.nomFabricant }}</td>
                </tr>
                <tr>
                    <th>Nom_marque</th>
                    <td>{{ marque.nomMarque }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="btn-container">
        <a href="{{ path('app_marque_index') }}" class="btn btn-warning bi bi-backspace-fill">Back to list</a>
        <a href="{{ path('app_marque_edit', {'id': marque.id}) }}" class="btn btn-primary bi bi-pencil-square">Edit</a>
        {{ include('marque/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}