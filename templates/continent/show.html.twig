{% extends 'base.html.twig' %}

{% block title %}Continent{% endblock %}

{% block stylesheets %}
<style>
    .container {
        margin-top: 20px;
    }

    h1 {
        color: #ffffff;
        text-shadow: 2px 2px 4px #000000;
        text-align: center;
        margin-bottom: 20px;
        font-size: 2.5em;
        animation: fadeIn 2s;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    .table {
        margin-bottom: 20px;
        border-radius: 10px;
        overflow: hidden;
        background-color: #000000;
        color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .table th,
    .table td {
        border: 1px solid #ffa500;
    }

    .table thead th {
        background-color: #343a40;
        color: #ffffff;
        font-weight: bold;
    }

    .table tbody tr {
        background-color: #000000;
        color: #ffffff;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-warning:hover {
        background-color: #e0a800;
        border-color: #d39e00;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .btn-container {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-bottom: 20px;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Continent</h1>
    <div class="btn-container">
        <a href="{{ path('app_continent_index') }}">
            <button type="button" class="btn btn-warning">Back to list</button>
        </a>
        <a href="{{ path('app_continent_edit', {'id': continent.id}) }}">
            <button type="button" class="btn btn-success bi bi-pencil-square"></button>
        </a>
        {{ include('continent/_delete_form.html.twig') }}
    </div>
    <div class="table-responsive">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ continent.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ continent.nom }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}