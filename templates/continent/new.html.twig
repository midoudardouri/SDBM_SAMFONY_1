{% extends 'base.html.twig' %}

{% block title %}New Continent{% endblock %}

{% block stylesheets %}
<style>
    .container {
        margin-top: 20px;
    }

    h1 {
        color: #ffffff;
        text-shadow: 2px 2px 4px #000000;
        text-align: center;
        margin-bottom: 20px;
        font-size: 2.5em;
        animation: fadeIn 2s;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-warning:hover {
        background-color: #e0a800;
        border-color: #d39e00;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .btn-container {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }

    .form-container {
        background-color: #000000;
        color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .form-label {
        color: #ffffff;
    }

    .form-control {
        background-color: #343a40;
        color: #ffffff;
        border: 1px solid #ffa500;
    }

    .form-control:focus {
        background-color: #343a40;
        color: #ffffff;
        border-color: #ffa500;
        box-shadow: none;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Create new Continent</h1>
    <div class="form-container">
        {{ include('continent/_form.html.twig') }}
    </div>
    <div class="btn-container">
        <a href="{{ path('app_continent_index') }}">
            <button type="button" class="btn btn-warning">Back to list</button>
        </a>
    </div>
</div>
{% endblock %}
