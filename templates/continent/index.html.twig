{% extends 'base.html.twig' %}

{% block title %}Continent index{% endblock %}

{% block body %}
<div class="container"> 
    <h1>Continent index</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for continent in continents %}
            <tr>
                <td>{{ continent.id }}</td>
                <td>{{ continent.nom }}</td>
                <td>
                    <a href="{{ path('app_continent_show', {'id': continent.id}) }}">show</a>
                    <a href="{{ path('app_continent_edit', {'id': continent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_continent_new') }}">Create new</a>
    </div>
{% endblock %}
